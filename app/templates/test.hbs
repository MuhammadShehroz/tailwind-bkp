<div class='space-y-6'>
  <div class='bg-white shadow px-4 py-5 sm:rounded-lg sm:p-6'>
    <div class='md:grid md:grid-cols-3 md:gap-6'>
      <div class='md:col-span-1'>
        <h3 class='text-lg font-medium leading-6 text-gray-900'>Profile</h3>
        <p class='mt-1 text-sm text-gray-500'>
          This information will be displayed publicly so be careful what you share.
        </p>
      </div>
      <div class='mt-5 md:mt-0 md:col-span-2'>
        <form class='space-y-6' action='#' method='POST'>
          <div class='grid grid-cols-3 gap-6'>
            <div class='col-span-3 sm:col-span-2'>
              <ToggleSwitch
                @disabled={{true}}
                @value={{false}}
                @label='Enable annual payments'
                @hint='save 10%'
              />
            </div>
          </div>

          <div class='grid grid-cols-3 gap-6'>
            <div class='col-span-3 sm:col-span-2'>
              <FormElements::CurrencyInput
                placeholder='Enter quantity'
                disabled={{false}}
                @value={{sum}}
                @decimals={{2}}
                @decimalsSeparator='.'
                @thousandsSeparator=' '
                @allowClear={{false}}
                @leadingIcon='$'
                @trailingIcon={{false}}
                @label='Quantity with icons'
                @showErrors={{true}}
                @errorMessage='errror!'
                as |leadingIcon trailingIcon showClear showErrors onTrailingIconClick|
              >
              <FormElements::InputLeadingIcon>
                <div class='absolute inset-y-0 left-0 pl-3 z-10 flex items-center pointer-events-none'>
                  <span class='text-gray-500 sm:text-sm'>$</span>
                </div>
              </FormElements::InputLeadingIcon>
              <FormElements::InputTrailingIcon @onTrailingIconClick={{onTrailingIconClick}} @showClear={{showClear}} @showErrors={{showErrors}}/>
            </FormElements::CurrencyInput>
            </div>

          </div>

          <div>
            <CheckboxInput
              @model={{model.IncludeStripe}}
              @label='Checkbox label'
            />
          </div>

          <div>
            <FormElements::PowerSelectMenu
              @label='Currency'
              @options={{currencies}}
              @optionKey='id'
              @optionLabel='name'
              @selected={{currency}}
              @value={{currency}}
              @searchEnabled={{true}}
              @showErrors={{true}}
              @errorMessage='This value cant be selected on Sunday'
            />
          </div>

          <div>
            <FormElements::NativeSelectMenu
              @label='Currency'
              @options={{currencies}}
              @optionKey='id'
              @optionLabel='name'
              @value={{currencyId}}
              @selected={{currencyId}}
              @showErrors={{false}}
              @errorMessage='This value cant be selected on Sunday'
            />
          </div>

          <div>

            </div>
            <div>

            </div>
            <div>
            <FormElements::TextInput
              placeholder='Enter quantity'
              disabled={{false}}
              @value='15.2'
              @hint='123'
              @allowClear={{false}}
              @leadingIcon='$'
              @trailingIcon={{false}}
              @label='Quantity with icons'
              @showErrors={{true}}
              @errorMessage='errror!'
              as |leadingIcon trailingIcon showClear showErrors onTrailingIconClick|
            >
              <FormElements::InputLeadingIcon>
                <div class='absolute inset-y-0 left-0 pl-3 z-10 flex items-center pointer-events-none'>
                  <span class='text-gray-500 sm:text-sm'>$</span>
                </div>
              </FormElements::InputLeadingIcon>
              <FormElements::InputTrailingIcon @onTrailingIconClick={{onTrailingIconClick}} @showClear={{showClear}} @showErrors={{showErrors}}/>
            </FormElements::TextInput>
          </div>

          <div>
            <FormElements::InputGroup
              placeholder='Type to search'
              @value={{query}}
              @label='Search'
              @allowClear={{true}}
              @showErrors={{false}}
              @errorMessage='Try to search again'
            />
          </div>

          <div>

            <FormElements::PasswordInput
              placeholder='Enter new password'
              disabled={{false}}
              @value='oldpw'
              @hint='Only letters allowed'
              @label='Password'
              @showErrors={{true}}
              @errorMessage='Weak password!'
            />
          </div>

            <div>
            <FormElements::ColorInput
              disabled={{false}}
              @value='000000'
              @leadingIcon='#'
              @trailingIcon={{true}}
              @label='Header Color'
              @onTrailingIconClick={{action 'onTrailingIconClick'}}
              @showErrors={{true}}
              @errorMessage='errror!'
            />
          </div>

          <div>

            <FormElements::NumberInput
              placeholder='Enter your age'
              disabled={{false}}
              @value='25'
              @label='Age'
              @leadingIcon='#'
              @trailingIcon={{true}}
              @allowClear={{true}}
              @showErrors={{true}}
              @errorMessage='errror!'
              as |leadingIcon trailingIcon showClear showErrors onTrailingIconClick|
            >
              <FormElements::InputLeadingIcon>
                <span class='text-gray-500 sm:text-sm'>{{leadingIcon}}</span>
              </FormElements::InputLeadingIcon>
              <FormElements::InputTrailingIcon @onTrailingIconClick={{onTrailingIconClick}} @showClear={{showClear}} @showErrors={{showErrors}}/>
            </FormElements::NumberInput>

          </div>

          <div>
            <FormElements::TextInput
              placeholder='Enter quantity'
              disabled={{false}}
              @value={{15.2}}
              @hint='123'
              @label='Quantity w/o icon'
              @showErrors={{true}}
              @errorMessage='errror!'
            >
            </FormElements::TextInput>
          </div>

          <div>
            <FormElements::TextArea
              @value='aksjhdlk'
              placeholder='enter your text here'
              @showErrors={{true}}
              @errorMessage='error message'
              @label='Description'
              @hint='up to 1000 symbols'
            />
          </div>
        </form>
      </div>
    </div>
  </div>

  <div class='flex justify-end'>
    <button type='button' class='tw-button white'>
      Cancel
    </button>
    <button type='submit' class='tw-button ml-3'>
      Save
    </button>
  </div>
</div>