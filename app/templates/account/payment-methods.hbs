    </Layouts::GridColumn>

    <Layouts::GridColumn class='sm:col-span-2'>
      <div class='bg-white shadow overflow-hidden sm:rounded-md px-6 py-5 mb-6'>
        {{#unless isStripeConnected}}
          <span class='tw-badge px-4'>Most Popular</span>
        {{/unless}}
        <div class='px-6 py-5 sm:flex sm:items-start sm:justify-between'>
          <h4 class='sr-only'>Stripe</h4>
