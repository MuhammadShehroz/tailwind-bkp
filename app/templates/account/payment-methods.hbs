<Layouts::PageHeader @resourceType='payment-methods' @pageType='list'>
  <Breadcrumbs @segments={{routeSegments}} />
  <Layouts::ColumnsGrid>
    <h2>Activate online payments and accept credit cards online</h2>
    <p class='text-blue-gray-500'>With the Stripe and Paypal integrations you'll get paid
      faster by making it easy for your customers to pay your
      invoices online with any major credit card.</p>
  </Layouts::ColumnsGrid>
</Layouts::PageHeader>

