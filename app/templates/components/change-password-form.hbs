<FormElements::PasswordInput
  @value={{model.currentPassword}}
  @label='Current Password'
  @showErrors={{validations.currentPassword.isInvalid}}
  @errorMessage={{validations.currentPassword.message}}
/>

<FormElements::PasswordInput
  @value={{model.password}}
  @label='New Password'
  @showErrors={{validations.password.isInvalid}}
  @errorMessage={{validations.password.message}}
/>
