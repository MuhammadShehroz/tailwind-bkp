<div class='fixed z-10 inset-0 overflow-y-auto' aria-labelledby='modal-title' role='dialog' aria-modal='true'>
  <div class='flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0'>
    <div class='fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity' aria-hidden='true'></div>
    <span class='hidden sm:inline-block sm:align-middle sm:h-screen' aria-hidden='true'>&#8203;</span>
    <div class='tw-modal-body'>
      <div>
        <h3 class='text-lg leading-6 font-medium text-gray-900'>
          {{#if supraTitle}}<span>{{supraTitle}}</span>{{/if}}
          {{title}}
        </h3>
        <div class='mt-3 sm:mt-5'>
          {{yield this}}
        </div>
      </div>
      {{#if hasButtons}}
        <div class='flex justify-end mt-5 gap-3'>
          {{#if singleActionLabel}}
            <button type='button' class='tw-button secondary' {{action 'onClickSingleAction'}}>{{singleActionLabel}}</button>
          {{/if}}
          {{#if acceptLabel}}
            <button type='button' {{action 'accept'}} class='tw-button' disabled={{acceptDisabled}}>{{acceptLabel}}</button>
          {{/if}}
          {{#if dismissLabel}}
            <button type='button' {{action 'dismiss'}} class='tw-button white' disabled={{dismissDisabled}}>
              {{dismissLabel}}
            </button>
          {{/if}}
        </div>
      {{/if}}
    </div>
  </div>
</div>
