<div class='grid grid-cols-7'>
  <div class='col-span-7 sm:col-span-3 md:col-span-2 flex-col space-y-4'>
    <div>
      <span class='uppercase text-xs font-bold text-gray-600 mb-2'>Total Invoiced</span>
      <div class='text-2xl font-bold'>
        <FormatCurrency @value={{stat.total}} @isoCode={{stat.currency}} />
      </div>
    </div>
    <div>
      <span class='uppercase text-xs font-bold text-gray-600 mb-2'>Total Due</span>
      <div class='text-2xl font-bold'>
        <FormatCurrency @value={{stat.totalDue}} @isoCode={{stat.currency}} />
      </div>
    </div>
    <div>
      <span class='uppercase text-xs font-bold text-gray-600 mb-2'>Total Paid</span>
      <div class='text-2xl font-bold'>
        <FormatCurrency @value={{stat.totalPaid}} @isoCode={{stat.currency}} />
      </div>
    </div>
  </div>
  <div class='col-span-7 sm:col-span:4 md:col-span-5'>
    <HighCharts
      @chartOptions={{chartOptions}}
      @content={{chartData}}
    />
  </div>
</div>