{{#with (await currentUser) as |resolvedCurrentUser|}}
  {{#if (and resolvedCurrentUser.isLoaded (not resolvedCurrentUser.confirmedAt))}}
    <div class='bg-white shadow sm:rounded-lg mt-4 mb-4'>
      <div class='px-4 py-5 sm:p-6'>
        <h3 class='text-lg leading-6 font-medium text-gray-900'>Reminder</h3>
        <div class='mt-2 sm:flex sm:items-start sm:justify-between'>
          <div class='max-w-xl text-sm text-gray-500'>
            <p>You haven't confirmed your email address.</p>
          </div>
          <div class='mt-5 sm:mt-0 sm:ml-6 sm:flex-shrink-0 sm:flex sm:items-center'>
            <button type='button'
                    class='inline-flex items-center px-4 py-2 border border-transparent shadow-sm font-medium
                    rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2
                    focus:ring-offset-2 focus:ring-indigo-500 sm:text-sm' onclick={{perform _resendVerificationLink}}>
              Resend verification link
            </button>
          </div>
        </div>
      </div>
    </div>
  {{/if}}
{{/with}}
